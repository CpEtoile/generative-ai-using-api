{
  "compilerOptions": {
    "target": "es2017",
    // Or whichever version you want to target
    "module": "commonjs",
    // Or the module system you're using
    "outDir": "./dist",
    // Specify where you want your compiled files to go
    "rootDir": "./src",
    // Specify where your TypeScript files are
    "strict": true,
    // This enables strict type checking
    "esModuleInterop": true,
    // Allow default imports from modules with no default export
    "forceConsistentCasingInFileNames": true,
    // Enforces consistent file names
    "skipLibCheck": true,
    // Skip checking of all declaration files
    "moduleResolution": "node",
    "lib": [
      "ES6",
      "DOM"
    ]
    // List of library files to include,
  },
  "include": [
    "src/**/*.ts"
    // Add your source directory
  ],
  "exclude": [
    "node_modules"
    // Exclude node_modules directory
  ]
}
